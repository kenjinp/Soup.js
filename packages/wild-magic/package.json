{
  "name": "wild-magic",
  "version": "1.0.0-alpha.13",
  "description": "An Isomorphic Data-Driven Entity Component System",
  "keywords": [
    "typescript",
    "games",
    "game",
    "engine",
    "entity",
    "component",
    "system",
    "ecs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wild-magic/Wild-Magic.git"
  },
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "unpkg": "dist/wild-magic.js",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest --coverage src",
    "lint": "tslint src/**/*",
    "build": "npm run clean && npm run build:commonjs && npm run build:es && npm run build:umd",
    "build:commonjs": "tsc --module commonjs --target es5 --outDir dist/lib",
    "build:es": "tsc --module es2015 --target es5 --outDir dist/es",
    "build:umd": "rollup -c",
    "documentation": "typedoc --out documentation/ --exclude \"**/*+(test|spec).ts\" src/",
    "clean": "rm -rf dist/ && rm -fr documentation/",
    "codecov": "codecov",
    "prepublishOnly": "npm run clean && npm run test && npm run lint && npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@types/jest": "^24.0.11",
    "@types/uuid": "^3.4.4",
    "codecov": "^3.3.0",
    "eslint": "^5.6.0",
    "jest": "^24.1.0",
    "rollup": "^1.6.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-immutable": "^5.5.2",
    "typedoc": "^0.13.0",
    "typescript": "^3.4.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "uuid": "^3.3.2"
  }
}
